          document.getElementById('next-btn').style.display = 'inline-block';
          document.getElementById('previous-btn').style.display = 'inline-block';
          select();
        } else {
          unmark();
          $("#search-count").hide();
          $("#next-btn").hide();
          $("#previous-btn").hide();
        }
      }

